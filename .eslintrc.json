{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "arrow-body-style": "off",
    "default-case": ["error", { "commentPattern": "^No\\sdefault" }],
    "no-use-before-define": ["error", { "functions": false }],
    "no-param-reassign": [
      "error",
      { "props": true, "ignorePropertyModificationsFor": ["task", "project"] }
    ]
  }
}
